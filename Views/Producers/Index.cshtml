@*Define model*@
@model IEnumerable<Producer>

@*Define Data*@
@{
	ViewData["Title"] = "List of Producers";
}
@*Write code*@
<div class="row">
	<div class="col-lg-12 offset-md-2">
		<table class="table">
			<thead>
				<tr class="text-center">
					<th>@Html.DisplayNameFor(m => m.ProfilePictureURL)</th>
					<th>@Html.DisplayNameFor(m => m.FullName)</th>
					<th>@Html.DisplayNameFor(m => m.Biography)</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td class="align-middle">
							<img class="rounded-circle" src=@item.ProfilePictureURL alt=@item.FullName style="max-width: 150px"/>
						</td>
						<td class="align-middle">@Html.DisplayFor(m => item.FullName)</td>
						<td class="align-middle">@Html.DisplayFor(m => item.FullName)</td>
						<td class="align-middle">
							<a class="btn btn-outline-primary"><i class="bi bi-pencil-squared"></i>Edit</a> | 
							<a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details</a> | 
							<a class="btn btn-danger text-white"><i class="bi bi-trash"></i>Delete</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
